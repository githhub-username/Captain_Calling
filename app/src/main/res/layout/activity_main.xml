<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/Muddy_Appbar"
                    app:navigationIcon="@drawable/ic_baseline_menu_24"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Captain Calling"
                        android:textAllCaps="true"
                        android:textColor="@color/Muddy_Appbar_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/admin_go"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_baseline_admin_panel_settings_24"
                        android:visibility="visible" />


                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="true"
                    android:layout_gravity="fill_vertical"
                    android:fillViewport="true"
                    android:layout_below="@+id/tool_bar"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/mnjbjhvhcghcgx"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_marginTop="10dp"
                            android:layout_height="380dp">

                            <LinearLayout
                                android:layout_weight="5"
                                android:orientation="vertical"
                                android:weightSum="10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/create_team"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:contentPadding="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="5"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardBackgroundColor="@color/card_background"
                                    tools:ignore="NestedWeights">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/card_background">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:tint="@color/black"
                                            android:layout_above="@+id/nbuiyhtdtd"
                                            android:padding="25dp"
                                            android:background="@color/card_background"
                                            android:src="@drawable/connect" />


                                        <TextView
                                            android:id="@+id/nbuiyhtdtd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:text="Create Team"
                                            android:textColor="@color/card_foreground"
                                            android:textAllCaps="true"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>




                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/join_team"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:contentPadding="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_weight="5"
                                    app:cardElevation="10dp"
                                    app:cardBackgroundColor="@color/card_background"
                                    app:cardCornerRadius="20dp"
                                    android:background="@color/cardview_light_background">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_above="@+id/jiguigugug"
                                            android:tint="@color/black"
                                            android:layout_marginBottom="-1dp"
                                            android:padding="25dp"
                                            android:src="@drawable/team" />

                                        <TextView
                                            android:id="@+id/jiguigugug"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:text="Join Team"
                                            android:textAllCaps="true"
                                            android:textColor="@color/card_foreground"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="5"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/challenge"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:contentPadding="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="5"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardBackgroundColor="@color/card_background"
                                    tools:ignore="NestedWeights">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_above="@+id/bjbuvuvu"
                                            android:tint="@color/black"
                                            android:padding="25dp"
                                            android:src="@drawable/newspaper" />


                                        <TextView
                                            android:id="@+id/bjbuvuvu"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:text="Article"
                                            android:textColor="@color/card_foreground"
                                            android:textAllCaps="true"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>




                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/my_teams"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:contentPadding="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_weight="5"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardBackgroundColor="@color/card_background">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_above="@+id/vhvhycyctycyt"
                                            android:tint="@color/black"
                                            android:padding="25dp"
                                            android:src="@drawable/myteam" />


                                        <TextView
                                            android:id="@+id/vhvhycyctycyt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:text="My Team"
                                            android:textColor="@color/card_foreground"
                                            android:textAllCaps="true"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_main_view"
                            android:layout_width="match_parent"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            tools:listitem="@layout/blog_model"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/mnjbjhvhcghcgx"
                            android:layout_marginTop="-2dp" />


                    </RelativeLayout>



                </androidx.core.widget.NestedScrollView>





            </RelativeLayout>

        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/navigation_bar"
            android:layout_gravity="start"
            app:menu="@menu/menu"
            app:headerLayout="@layout/header_view"
            app:itemIconSize="20dp"
            />

    </androidx.drawerlayout.widget.DrawerLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/white"
        app:backgroundTint="@color/Muddy_Appbar"
        android:layout_marginBottom="0dp"
        app:menu="@menu/bottom_menu"
        android:background="@color/white"/>




</RelativeLayout>