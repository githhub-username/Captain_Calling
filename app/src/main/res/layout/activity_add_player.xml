<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddPlayerActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBtnhhgc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        app:queryHint="Enter username"/>


    <ProgressBar
        android:id="@+id/dsdjsbhjsvdhsvdshd"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchBtnhhgc"
        android:layout_marginBottom="-5dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_add_player"
        android:layout_width="match_parent"
        android:backgroundTint="@color/background"
        android:layout_height="match_parent"
        android:layout_below="@+id/dsdjsbhjsvdhsvdshd"
        android:background="#FFFFFF"/>

</RelativeLayout>