        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="android:statusBarColor">@color/Muddy_Appbar</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1</item>
